{
  "WorkReport": {
    "Paths": {
      "ReposRoot": "D:\\gitProjects",
      "ReportsDir": "reports",
      "DataDir": "data"
    },
    "ReportWindow": {
      "StartDate": "2025-12-29",
      "EndDate": "2025-12-29"
    },
    "WorkHours": {
      "Start": "09:00",
      "End": "18:00",
      "LunchBreak": {
        "Start": "13:30",
        "End": "14:30"
      },
      "DailyOverrides": {
        "Tuesday": {
          "LunchBreak": {
            "Start": "12:30",
            "End": "13:30"
          }
        },
        "Wednesday": {
          "LunchBreak": {
            "Start": "12:30",
            "End": "13:30"
          }
        },
        "Thursday": {
          "LunchBreak": {
            "Start": "12:30",
            "End": "13:30"
          }
        }
      },
      "WorkDays": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "TimeZone": "Europe/Rome"
    },

    "ActivityWatch": {
      "BaseUrl": "http://127.0.0.1:5600/api/0",
      "Watchers": ["aw-watcher-window", "aw-watcher-web", "aw-watcher-afk"]
    },

    "Filters": {
      "MinDurationSeconds": 10,
      "MergeGapSeconds": 60,
      "ExcludeAFK": true
    },

    "Editors": {
      "RecognizedApps": ["Code", "devenv.exe", "Visual Studio"],
      "NormalizeTitle": true,
      "CommitAssociationWindowMinutes": 15
    },

    "Privacy": {
      "BlacklistApps": ["WhatsApp", "Telegram", "Spotify"],
      "BlacklistDomains": ["bank", "health", "private"],
      "AnonymizeUrls": true
    },

    "Categories": [
      {
        "Name": "Coding",
        "Patterns": ["Code", "Visual Studio", "IntelliJ", "PyCharm"]
      },
      {
        "Name": "Meeting",
        "Patterns": ["teams", "zoom", "meet", "webex"]
      },
      {
        "Name": "Communication",
        "Patterns": ["Slack", "Outlook", "Gmail", "Discord"]
      },
      {
        "Name": "WebMisc",
        "Patterns": ["Chrome", "Firefox", "Edge"]
      }
    ],

    "Output": {
      "ReportsFolder": "reports",
      "Format": ["Markdown", "Csv"],
      "FileNameTemplate": "daily-{date:yyyy-MM-dd}.md"
    },

    "Notifications": {
      "Email": {
        "Enabled": false,
        "SmtpHost": "smtp.server.com",
        "Port": 587,
        "Username": "user@example.com",
        "Password": "*****",
        "To": "manager@example.com"
      },
      "Slack": {
        "Enabled": false,
        "WebhookUrl": "https://hooks.slack.com/services/xxxx/yyyy/zzzz"
      },
      "Notion": {
        "Enabled": false,
        "ApiKey": "secret_xxxxx",
        "DatabaseId": "xxxx-yyyy-zzzz"
      }
    },

    "Database": {
      "Type": "SQLite",
      "ConnectionString": "Data Source=data\\workreport.db;"
    },
    "Repos": {
      "ReposRootFolder": "D:\\gitProjects"
    },

    "Summary": {
      "UseLLM": false,
      "LLMProvider": "openai",
      "Model": "gpt-4o-mini",
      "ApiKey": "sk-xxxxxx"
    },

    "Calendar": {
      "Outlook": {
        "Enabled": true,
        "IcsFile": "https://outlook.live.com/owa/calendar/e329a7ae-ee24-4f79-8f42-e4d1a66ea5e4/567b01c5-1709-4085-ae40-adf99fa3e1cf/cid-C9E5788065BB228A/calendar.ics",
        "TimeZone": "Europe/Rome"
      }
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  }
}
